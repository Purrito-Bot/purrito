{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "lib": ["dom", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": false
    },

    "include": ["src"],
    "exclude": ["node_modules", "src/**/__test__"]
}
